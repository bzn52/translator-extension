{
  "manifest_version": 3,
  "name": "Instant Page Translator",
  "description": "Translate the current page instantly in-place using Google Translate.",
  "version": "1.0",
  "permissions": ["tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
